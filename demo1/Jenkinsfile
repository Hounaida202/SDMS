pipeline {
    agent any

    environment {
        DOCKERHUB_CREDENTIALS = 'etrichi'
        IMAGE_NAME = 'hounaida202/demo1-app'
        SONAR_TOKEN = '81b9323901c5b4fffb0a0adfe88b79e178a92f42'
    }

    stages {
        stage('Build & Tests') {
            steps {
                dir('demo1') {
                    // 1. Clean, compile, tests
                    bat 'mvn clean compile test'

                    // 2. Rapport JaCoCo
                    bat 'mvn jacoco:report'
                }
            }
        }

        stage('Code Quality - SonarQube') {
            steps {
                dir('demo1') {
                    // 3. SonarQube
                    bat 'mvn org.sonarsource.scanner.maven:sonar-maven-plugin:3.11.0.3922:sonar -Dsonar.login=%SONAR_TOKEN%'
                }
            }
        }

        stage('Package JAR') {
            steps {
                dir('demo1') {
                    // 4. IMPORTANT : Créer le JAR
                    bat 'mvn package -DskipTests'
                }
            }
        }

        stage('Build Docker Image') {
            steps {
                dir('demo1') {
                    // 5. Maintenant Docker trouvera le JAR
                    bat 'docker build -t %IMAGE_NAME% .'
                }
            }
        }

        stage('Push to Docker Hub') {
            steps {
                dir('demo1') {
                    withCredentials([usernamePassword(
                        credentialsId: DOCKERHUB_CREDENTIALS,
                        passwordVariable: 'PASS',
                        usernameVariable: 'USER'
                    )]) {
                        bat """
                            echo %PASS% | docker login -u %USER% --password-stdin
                            docker push %IMAGE_NAME%
                        """
                    }
                }
            }
        }

        stage('Deploy') {
            steps {
                dir('demo1') {
                    bat 'docker-compose down || echo "No containers to stop"'
                    bat 'docker-compose up -d'
                    bat 'timeout /t 30 /nobreak'
                    bat 'docker-compose ps'
                }
            }
        }
    }

    post {
        always {
            echo 'Pipeline terminé'
        }
        success {
            echo ' SUCCÈS : Tout est OK !'
        }
        failure {
            echo ' ÉCHEC : Vérifiez les logs'
        }
    }
}